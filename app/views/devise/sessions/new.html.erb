<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
  <img class="mb-4" src="https://getbootstrap.com/docs/4.4/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">

  <h1 class="h3 mb-3 font-weight-normal">Login</h1>

  <%= f.label :email, class: "sr-only" %>
  <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>

  <%= f.label :password, class: "sr-only" %>
  <%= f.password_field :password, autocomplete: "current-password", required: true, placeholder: "Senha", class: "form-control" %>


  <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
      <label>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </label>
    </div>
  <% end %>

  <%= f.submit "Log in", class:"btn btn-lg btn-primary btn-block" %>
  <p class="mt-5 mb-3 text-muted">
    Feito com ❤️
  </p>
<% end %>
