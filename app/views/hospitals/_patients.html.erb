<div class="row">
  <div class="col">
    <h1 class="float-left">Pacientes</h1>
    <%= link_to "atualizar dados dos pacientes", hospital_patients_path, class:"btn btn-outline-primary float-right mt-2 mb-2" %>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Nome</th>
            <th scope="col">Data de Nascimento</th>
            <th scope="col">Data de Internação</th>
            <th scope="col">Vias Aérias</th>
            <th scope="col">COVID-19</th>
            <th scope="col">CSN</th>
            <th scope="col">SiaReg</th>
            <th scope="col">Data de Saída</th>
            <th scope="col">Motivo da Saída</th>
            <th scope="col">Leito</th>
            <th scope="col">Aguardando UTI?</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: 'patients/patient', collection: patients %>
        </tbody>
      </table>
    </div>
  </div>
</div>
