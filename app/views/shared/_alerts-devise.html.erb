<%- if flash.present? -%>
  <div class="alert-content">
    <%- flash.each do |type, msg| -%>
      <div class="<%= devise_flash_type_to_bts(type) %>" role="alert">
        <button type="button" class="close" data-dismiss="alert">
          <span aria-hidden="true">&times;</span>
        </button>
        <div class="alert-text">
          <%= msg %>
        </div>
    <%- end -%>
  </div>
<%- end -%>